<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlChildLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/home_screen_bg" />

        <ImageView
            android:id="@+id/pepsi_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/pepsi_icon"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/sixteen_dp"
            android:background="@color/white"
            card_view:cardCornerRadius="@dimen/three_dp"
            card_view:cardElevation="@dimen/three_dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ten_dp">

                    <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                        android:id="@+id/score_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableTop="@drawable/score_icon"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/score"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/twenty_sp" />

                    <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                        android:id="@+id/score"
                        android:layout_width="@dimen/hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/ten_dp"
                        android:layout_toRightOf="@+id/score_icon"
                        android:background="@drawable/blue_background_rounded"
                        android:paddingLeft="@dimen/twenty_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingRight="@dimen/twenty_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/twenty_sp" />

                    <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                        android:id="@+id/time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/score"
                        android:drawableTop="@drawable/time_icon"
                        android:padding="@dimen/ten_dp"
                        android:text="@string/time"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/twenty_sp" />

                    <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                        android:id="@+id/time"
                        android:layout_width="@dimen/hundred_dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/ten_dp"
                        android:layout_toRightOf="@+id/time_icon"
                        android:background="@drawable/blue_background_rounded"
                        android:paddingLeft="@dimen/twenty_dp"
                        android:paddingTop="@dimen/twelve_dp"
                        android:paddingRight="@dimen/twenty_dp"
                        android:paddingBottom="@dimen/twelve_dp"
                        android:text="00:35"
                        android:textColor="@color/white"
                        android:textSize="@dimen/twenty_sp" />

                    <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                        android:id="@+id/level_numbner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/ten_dp"
                        android:layout_toRightOf="@+id/time"
                        android:gravity="center_horizontal"
                        android:padding="@dimen/ten_dp"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/twenty_sp" />

                    <LinearLayout
                        android:id="@+id/scorebox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/ten_dp"
                        android:layout_toLeftOf="@+id/logout"
                        android:layout_toRightOf="@+id/level_numbner"
                        android:background="@drawable/blue_background_rounded"
                        android:orientation="horizontal"
                        android:padding="@dimen/twelve_dp"></LinearLayout>

                    <ImageView
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/ten_dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/logout_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_dp"
                    android:background="#263646"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pepsilarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="#e0e2e3"
                        android:src="@drawable/pepsi_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pepsilarge"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/ten_dp"
                            android:paddingTop="@dimen/twenty_dp"
                            android:paddingRight="@dimen/ten_dp"
                            android:paddingBottom="@dimen/twenty_dp">

                            <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                                android:id="@+id/q"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/ten_dp"
                                android:text="Q:"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/twenty_sp"
                                android:textStyle="bold" />

                            <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                                android:id="@+id/question"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/q"
                                android:padding="@dimen/ten_dp"
                                android:textColor="@color/medium_gray"
                                android:textSize="@dimen/twenty_sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten_dp"
                                android:layout_weight="1">

                                <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                                    android:id="@+id/answer_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="@dimen/twelve_dp"
                                    android:background="@drawable/border_all_gray_rounded"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:minLines="2"
                                    android:padding="@dimen/twelve_dp"
                                    android:text="Tubby"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/twenty_sp" />

                                <ImageView
                                    android:id="@+id/correct_answer_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/correct_answer_icon"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/incorrect_answer_one"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/incorrect_answer_icon"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten_dp"
                                android:layout_weight="1">

                                <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                                    android:id="@+id/answer_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="@dimen/twelve_dp"
                                    android:background="@drawable/border_all_gray_rounded"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:minLines="2"
                                    android:padding="@dimen/twelve_dp"
                                    android:text="Stodge"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/twenty_sp" />

                                <ImageView
                                    android:id="@+id/correct_answer_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/correct_answer_icon"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/incorrect_answer_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/incorrect_answer_icon"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/ten_dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten_dp"
                                android:layout_weight="1">

                                <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                                    android:id="@+id/answer_three"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="@dimen/twelve_dp"
                                    android:background="@drawable/border_all_gray_rounded"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:minLines="2"
                                    android:padding="@dimen/twelve_dp"
                                    android:text="Helium Bat"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/twenty_sp" />

                                <ImageView
                                    android:id="@+id/correct_answer_three"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/correct_answer_icon"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/incorrect_answer_three"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/incorrect_answer_icon"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/ten_dp"
                                android:layout_weight="1">

                                <com.clairvoyant.naijamenu.fonts.RobotoRegularTextView
                                    android:id="@+id/answer_four"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="@dimen/twelve_dp"
                                    android:background="@drawable/border_all_gray_rounded"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="2"
                                    android:minLines="2"
                                    android:padding="@dimen/twelve_dp"
                                    android:text="Stumpy"
                                    android:textColor="@color/medium_gray"
                                    android:textSize="@dimen/twenty_sp" />

                                <ImageView
                                    android:id="@+id/correct_answer_four"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/correct_answer_icon"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/incorrect_answer_four"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true"
                                    android:src="@drawable/incorrect_answer_icon"
                                    android:visibility="gone" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <include
            android:id="@+id/progress_view_quiz"
            layout="@layout/progress_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivOops"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/oops"
        android:visibility="gone" />

</RelativeLayout>